<?xml version="1.0"?>

<robot xmlns:xacro="http://www.ros.org/wiki/xacro" name="my_robot">

    <xacro:property name="PI" value="3.14159" />
    <xacro:property name="effort" value="30.0" />
    <xacro:property name="velocity" value="10.0" />

    <link name="world"/>
    
    <link name="base_link">
        <visual>
            <origin xyz="-0.5 -0.5 0.0" rpy="0.0 0.0 0.0"/>
            <geometry>
                <mesh filename="package://my_robot_description/meshes/basement.STL" scale="0.01 0.01 0.01"/>
                <!-- <mesh filename="package://my_robot_description/meshes/base_link.STL"/> -->
            </geometry>
        </visual>
    </link>

    <joint name = "virtual_joint" type ="fixed">
        <parent link = "world"/>
        <child link = "base_link"/>
        <origin xyz="0 0 0" rpy="0 0 0"/>
    </joint>

    <link name="base_plate">
        <visual>
            <origin xyz="-0.39 -0.39 -0.56" rpy="0.0 0.0 0.0"/>
            <geometry>
                <mesh filename="package://my_robot_description/meshes/base_plate.STL" scale="0.01 0.01 0.01"/>
            </geometry>
        </visual>
    </link>

    <joint name = "joint_1" type ="revolute">
        <parent link = "base_link"/>
        <child link = "base_plate"/>
        <axis xyz="0.0 0.0 1.0"/>
        <origin xyz="0 0 0.307" rpy="0 0 0.0"/>
        <limit lower="-${PI/2}" upper="${PI/2}" effort="${effort}" velocity="${velocity}"/>
    </joint>

    <link name="forward_drive_arm">
        <visual>
            <origin xyz="0.19 0.06 -0.08" rpy="0.0 -${PI/2} ${PI/2}"/>
            <geometry>
                <mesh filename="package://my_robot_description/meshes/forward_drive_arm.STL" scale="0.01 0.01 0.01"/>
            </geometry>
        </visual>
    </link>

    <joint name = "joint_2" type ="revolute">
        <parent link = "base_plate"/>
        <child link = "forward_drive_arm"/>
        <axis xyz="1.0 0.0 0.0"/>
        <origin xyz="-0.02 0 0.35" rpy="0 0 0.0"/>
        <limit lower="-${PI/2}" upper="${PI/2}" effort="${effort}" velocity="${velocity}"/>
    </joint>

    <link name="horizontal_arm">
        <visual>
            <origin rpy="${PI/2} 0 ${PI/2}" xyz="-0.03 -0.4 -0.06"/>
            <geometry>
                <mesh filename="package://my_robot_description/meshes/horizontal_arm.STL" scale="0.01 0.01 0.01"/>
            </geometry>
        </visual>
    </link>

    <joint name="joint_3" type="revolute">
        <parent link="forward_drive_arm"/>
        <child link="horizontal_arm"/>
        <axis xyz="1 0 0"/>
        <origin rpy="0 0 0" xyz="0 0 0.8"/>
        <limit lower="-${PI/2}" upper="${PI/2}" effort="${effort}" velocity="${velocity}"/>
    </joint>

    
</robot>